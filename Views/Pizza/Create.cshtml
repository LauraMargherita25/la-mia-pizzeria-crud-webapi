@using la_mia_pizzeria_static.Models
@model PizzaCategories

<div class="container">
    <div class="row">
        <div class="col-12">

            <div class="d-flex align-items-center">
                <h1 class="mt-3mb-3">Crea una nuova pizza</h1>
            </div>
     
            <form asp-controller="Pizza" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Immagine:</strong>
                    <input asp-for="Pizza.Img" class="d-block w-100"/>
                    <span asp-validation-for="Pizza.Img" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Nome:</strong>
                    <input asp-for="Pizza.Name" class="d-block w-100"/>
                    <span asp-validation-for="Pizza.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Contenuto:</strong>
                    <textarea asp-for="Pizza.Description" rows="10" class="d-block w-100"></textarea>
                    <span asp-validation-for="Pizza.Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Prezzo:</strong>
                    <input asp-for="Pizza.Price" class="d-block w-100"></input>
                    <span asp-validation-for="Pizza.Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Categoria:</strong>
                    <select asp-for="Pizza.CategoryId">
                        @foreach (Category category in Model.Categories)
                        {
                            <option value="@category.Id">@category.CategoryName</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <strong>Ingredienti:</strong>
                    <select asp-for="SelectedIngredients"  multiple="multiple" size="10" class="form-control mb-2 mr-sm-2 ml-sm-3 leftList" asp-items="@Model.Ingredients">
                        
                    </select>
                </div>
                <div class="text-end">
                    <input type="submit"class="btn btn-small btn-success"value="Salva">
                </div>
            </form>
        </div>
    </div>
</div>  